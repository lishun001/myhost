<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="apitool" extends="struts-default" >
		<!-- openapi要以jetty_run的方式启动 -->
		<action name="apiTools" class="apiToolsAction" method="apiTools" >
			<result name="success" type="freemarker">/page/apiTools.ftl</result>
		</action>
		
		<!-- API方法类别查询 -->
		<action name="queryMethodCategorys" class="apiToolsAction" method="queryMethodCategorys" />
		
		<!-- API方法名称查询 -->
		<action name="queryMethods" class="apiToolsAction" method="queryMethods" />
		
		<!-- API输入参数查询 -->
		<action name="queryMethodInParams" class="apiToolsAction" method="queryMethodInParams" />
		
		<!-- API输入参数查询 -->
		<action name="handleSubmitRequest" class="apiToolsAction" method="handleSubmitRequest" >
		<result name="success" type="freemarker">/page/apiTestResult.ftl</result>
		</action>
		<action name="apiToolsResult">
			<result name="success" type="freemarker">/page/apiTestResult.ftl</result>
		</action>
		
	</package>
</struts>
